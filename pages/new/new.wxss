.container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    width: 90%;
    padding: 40rpx;
    gap: 30rpx;
}

.ipt {
    background-color: #eaeaea;
    border-radius: 40rpx;
    padding: 10rpx 30rpx;
    box-sizing: border-box;
    font-size: 33rpx;
    flex-grow: 1;
}

.name {
    display: flex;
    width: 100%;
}

.location {
    width: 100%;
}

.location .picker {
    width: 100%;
    height: 60rpx;
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.intro {
    display: flex;
    flex-direction: column;
    width: 100%;
    gap: 20rpx;
}

.intro textarea {
    width: 100%;
}

.img {
    padding: 0;
    width: 100%;
    height: 400rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}

.img>image {
    width: 100%;
    height: 100%;
}

.img .select_img {
    width: 300rpx;
    height: 300rpx;
}

.img .select_img image {
    width: 100%;
    height: 100%;
}

.btn_done {
    width: 100%;
    height: 60rpx;
    box-shadow: 4rpx 4rpx 8rpx rgba(0, 0, 0, .3);
    border-radius: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    letter-spacing: 60rpx;
    padding-left: 60rpx;
    box-sizing: border-box;
}