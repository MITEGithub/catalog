/* pages/msgDetail/msgDetail.wxss */
.container{
    display: flex;
    justify-content: center;
    flex-direction: column;
    padding: 40rpx;
    color: rgb(78, 78, 78);
}
.head{
    width: 80%;
    height: 140rpx;
    display: flex;
    justify-content: space-between;
    padding: 0 40rpx;
    align-items: center;
}
.head image{
    width: 100rpx;
    height: 100rpx;
}
.head text{
    font-size: 50rpx;
    letter-spacing: 10rpx;
}
.line{
    width: 100%;
    border-bottom: 4rpx solid #d1c293;
}
.content{
    letter-spacing: 5rpx;
    line-height: 50rpx;
    margin-top: 25rpx;
    padding: 0 10rpx;
}
.status{
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 40rpx 0;
}
.status image{
    width: 200rpx;
    height: 200rpx;
}
.time{
    width: 95%;
    display: flex;
    justify-content: flex-end;
    padding-right: 50rpx;
    /* margin-top: 40rpx; */
    /* align-items: flex-end; */
}